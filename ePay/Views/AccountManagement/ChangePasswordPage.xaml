<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ePay.Views.AccountManagement.ChangePasswordPage"
             Title="Change Password">
    <StackLayout Padding="20">
        <Entry x:Name="OldPasswordEntry"
               Placeholder="Old Password"
               IsPassword="True" />
        <Entry x:Name="NewPasswordEntry"
               Placeholder="New Password"
               IsPassword="True" />
        <Entry x:Name="ConfirmNewPasswordEntry"
               Placeholder="Confirm New Password"
               IsPassword="True" />
        <Button x:Name="ChangePasswordButton"
                Text="Change Password"
                Clicked="OnChangePasswordButtonClicked" />
    </StackLayout>
</ContentPage>

