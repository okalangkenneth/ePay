<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ePay.Views.AccountManagement.AccountManagementPage">
    <StackLayout Padding="20">
        <Label Text="Name" />
        <Entry x:Name="NameEntry" />

        <Label Text="Phone Number" />
        <Entry x:Name="PhoneNumberEntry" />

        <Label Text="Email Address" />
        <Entry x:Name="EmailAddressEntry" />

        <Button x:Name="ChangePasswordButton" Text="Change Password" Clicked="OnChangePasswordButtonClicked" />

        <Label Text="Enable 2FA" />
        <Switch x:Name="TwoFactorSwitch" />
    </StackLayout>
</ContentPage>
